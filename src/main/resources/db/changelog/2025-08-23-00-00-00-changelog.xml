<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        logicalFilePath="db/changelog/2025-08-31-00-00-00-changelog.xml">
    <changeSet id="2025-08-31-00-00-00-changelog" author="antontupikin" failOnError="true">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="supervisor_id" type="BIGINT"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="supervisor_id" baseTableName="users"
                                 constraintName="fk_users_on_supervisor" referencedColumnNames="id"
                                 referencedTableName="users"/>

        <createTable tableName="log_entries">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(255)"/>
        </createTable>

        <createTable tableName="organizations">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organizations"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="inn" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="organizations" columnNames="inn, title, user_id"/>
        <addUniqueConstraint columnNames="inn" constraintName="uc_organizations_inn" tableName="organizations"/>
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="organizations"
                                 constraintName="fk_organizations_on_user" referencedColumnNames="id"
                                 referencedTableName="users"/>

        <createTable tableName="users_organizations">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" primaryKeyName="pk_users_organizations" nullable="false"/>
            </column>
            <column name="organization_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="users_organizations" columnNames="organization_id, user_id"
                             constraintName="uk_users_organizations_organization_id_user_id"/>
        <addForeignKeyConstraint baseTableName="users_organizations" baseColumnNames="organization_id"
                                 constraintName="fk_users_organizations_organization_id"
                                 referencedTableName="organizations"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="users_organizations" baseColumnNames="user_id"
                                 constraintName="fk_users_organizations_user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
