<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        logicalFilePath="db/changelog/2025-09-10-10-43-42-changelog.xml">
    <changeSet id="2025-09-10-10-43-42-changelog" author="antontupikin" failOnError="true">
        <comment>Add works</comment>
        <createTable tableName="works">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_works"/>
            </column>
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="planned_start_date" type="timestamp"/>
            <column name="planned_end_date" type="timestamp"/>
            <column name="actual_start_date" type="timestamp"/>
            <column name="actual_end_date" type="timestamp"/>
            <column name="estimate_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="estimate_item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="estimate_catalog_item_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="work_status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="estimate_item_quantity" type="NUMERIC(19,3)" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="estimate_catalog_item_quantity" type="NUMERIC(19,3)" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="works" indexName="i_works_employee_id">
            <column name="estimate_id"/>
        </createIndex>
        <createIndex tableName="works" indexName="i_works_work_status">
            <column name="work_status"/>
        </createIndex>
        <addForeignKeyConstraint baseColumnNames="employee_id" baseTableName="works"
                                 constraintName="fk_works_on_employee" referencedColumnNames="id"
                                 referencedTableName="users" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseColumnNames="estimate_id" baseTableName="works"
                                 constraintName="fk_works_on_estimate" referencedColumnNames="id"
                                 referencedTableName="estimates" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseColumnNames="estimate_catalog_item_id" baseTableName="works"
                                 constraintName="fk_works_on_estimate_catalog_item" referencedColumnNames="id"
                                 referencedTableName="estimate_catalog_items" onDelete="CASCADE"/>
        <addForeignKeyConstraint baseColumnNames="estimate_item_id" baseTableName="works"
                                 constraintName="fk_works_on_estimate_item" referencedColumnNames="id"
                                 referencedTableName="estimate_items"/>
    <rollback>
        <dropTable tableName="works"/>
    </rollback>
    </changeSet>
</databaseChangeLog>