<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        logicalFilePath="db/changelog/2025-08-12-15-00-00-changelog.xml">
    <changeSet id="3" author="antontupikin" failOnError="true">
        <createTable tableName="organizations">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_organizations"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="inn" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="organizations" columnNames="inn, title, user_id"/>
        <addUniqueConstraint columnNames="inn" constraintName="uc_organizations_inn" tableName="organizations"/>
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="organizations"
                                 constraintName="fk_organizations_on_user" referencedColumnNames="id"
                                 referencedTableName="users"/>
        <rollback>
            <dropTable tableName="organizations" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>