<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        logicalFilePath="db/changelog/2025-09-10-10-43-42-changelog.xml">
    <changeSet id="2025-09-10-10-43-42-changelog" author="antontupikin" failOnError="true">
        <comment>Add works</comment>
        <createTable tableName="works">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_works"/>
            </column>
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="planned_start_date" type="timestamp"/>
            <column name="planned_end_date" type="timestamp"/>
            <column name="actual_start_date" type="timestamp"/>
            <column name="actual_end_date" type="timestamp"/>
            <column name="work_status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="works" indexName="i_works_work_status">
            <column name="work_status"/>
        </createIndex>
        <addForeignKeyConstraint baseColumnNames="employee_id" baseTableName="works"
                                 constraintName="fk_works_on_employee" referencedColumnNames="id"
                                 referencedTableName="users" onDelete="CASCADE"/>
        <createTable tableName="works_estimate_items">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" primaryKeyName="pk_works_estimate_items" nullable="false"/>
            </column>
            <column name="work_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="estimate_item_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="works_estimate_items" indexName="i_works_estimate_item_id">
            <column name="work_id"/>
        </createIndex>
        <addUniqueConstraint tableName="works_estimate_items" columnNames="works_id, estimate_item_id"
                             constraintName="uk_works_estimate_items_work_id_estimate_item_id"/>
        <addForeignKeyConstraint
                baseTableName="works_estimate_items"
                baseColumnNames="estimate_item_id"
                referencedTableName="estimate_items"
                referencedColumnNames="id"
                constraintName="fk_worestite_on_estimate_item"/>

        <addForeignKeyConstraint
                baseTableName="works_estimate_items"
                baseColumnNames="works_id"
                referencedTableName="works"
                referencedColumnNames="id"
                constraintName="fk_worestite_on_work"/>


    <rollback>
        <dropTable tableName="works"/>
    </rollback>
    </changeSet>
</databaseChangeLog>