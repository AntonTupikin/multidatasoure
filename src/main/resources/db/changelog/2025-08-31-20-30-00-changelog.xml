<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        logicalFilePath="db/changelog/2025-08-31-20-30-00-changelog.xml">

    <changeSet id="2025-08-31-20-30-00-changelog" author="antontupikin" failOnError="true">
        <comment>Create business_partners and link to estimate_items</comment>

        <createTable tableName="business_partners">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_business_partners"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="business_partners" indexName="i_business_partners_user_id">
            <column name="user_id"/>
        </createIndex>
        <addForeignKeyConstraint baseTableName="business_partners" baseColumnNames="user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_business_partners_user" onDelete="CASCADE"/>

        <addColumn tableName="estimate_items">
            <column name="business_partner_id" type="BIGINT"/>
        </addColumn>
        <createIndex tableName="estimate_items" indexName="i_estimate_items_business_partner_id">
            <column name="business_partner_id"/>
        </createIndex>
        <addForeignKeyConstraint baseTableName="estimate_items" baseColumnNames="business_partner_id"
                                 referencedTableName="business_partners" referencedColumnNames="id"
                                 constraintName="fk_estimate_items_business_partner" onDelete="SET NULL"/>
    </changeSet>

</databaseChangeLog>

