<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        logicalFilePath="db/changelog/2025-09-01-12-00-00-changelog.xml">
    <changeSet id="2025-09-01-12-00-00-changelog" author="gpt">
        <renameTable oldTableName="employee_organization" newTableName="employees_organizations"/>

        <addColumn tableName="employees_organizations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_employees_organizations"/>
            </column>
        </addColumn>

        <addUniqueConstraint tableName="employees_organizations"
                             columnNames="employee_id, organization_id"
                             constraintName="uk_employees_organizations_employee_id_organization_id"/>

        <dropForeignKeyConstraint baseTableName="employees_organizations" constraintName="fk_emporg_on_employee_profile"/>
        <dropForeignKeyConstraint baseTableName="employees_organizations" constraintName="fk_emporg_on_organization"/>

        <addForeignKeyConstraint baseTableName="employees_organizations" baseColumnNames="employee_id"
                                 constraintName="fk_employees_organizations_employee_id"
                                 referencedTableName="employees_profiles" referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="employees_organizations" baseColumnNames="organization_id"
                                 constraintName="fk_employees_organizations_organization_id"
                                 referencedTableName="organizations" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
